<div class="favourite">
    <% if user_signed_in? %>
      <% if current_user.favourited_question?(@question) %>
        <%= link_to fa_icon("star"),
                    question_favourite_path(@question, @question.favourite_for(current_user)),
                    class: "big-icon", title: "Un-Favourite", method: :delete %>
      <% else %>
        <%= link_to fa_icon("star-o"), question_favourites_path(@question),
                      class: "big-icon", method: :post %>
      <% end %>
    <% end %>
    (<%= @question.favourites.count %>)
</div>
